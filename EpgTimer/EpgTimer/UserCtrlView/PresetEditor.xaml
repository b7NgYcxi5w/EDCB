<UserControl x:Class="EpgTimer.PresetEditorBase"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:my="clr-namespace:EpgTimer"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" >
    
    <StackPanel Orientation="Horizontal">
        <TextBlock Text="プリセット" Name="txt_title"/>
        <ComboBox VerticalAlignment="Stretch" Margin="12,0,6,0" Name="comboBox_preSet" Width="196" />
        <Button Content="再読込" Margin="6,0,0,0" MinWidth="48" Name="button_reload" />
        <Button Content="追加" Margin="6,0,0,0" MinWidth="48" Name="button_add" />
        <Button Content="変更" Margin="6,0,0,0" MinWidth="48" Name="button_chg" />
        <Button Content="削除" Margin="6,0,0,0" MinWidth="48" Name="button_del" />
        <Button Content="設定" Margin="6,0,0,0" MinWidth="48" Name="button_set" />
    </StackPanel>
</UserControl>
